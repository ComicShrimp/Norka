<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="norka">
	<schema id="com.github.tenderowl.norka" path="/com/github/tenderowl/norka/">
		<key type="ai" name="window-size">
			<default>[960, 600]</default>
			<summary>Window size in px</summary>
			<description>Window size (width and height).</description>
		</key>
		<key type="ai" name="window-position">
			<default>[-1, -1 ]</default>
			<summary>Window position on screen in px</summary>
			<description>Window position on screen.</description>
		</key>
		<key type="i" name="last-document-id">
			<default>-1</default>
			<summary>Last opened document id</summary>
			<description>Last opened document id</description>
		</key>
		<key type="b" name="autosave">
			<default>true</default>
			<summary>Autosave document</summary>
			<description>Toggle autosave for documents</description>
		</key>
		<key type="b" name="spellcheck">
			<default>true</default>
			<summary>Spellchecking</summary>
			<description>Toggle auto spellchecking</description>
		</key>
		<key type="b" name="spaces-instead-of-tabs">
			<default>true</default>
			<summary>Spaces instead of tabs</summary>
			<description>Insert spaces instead of tabs</description>
		</key>
		<key type="b" name="autoindent">
			<default>true</default>
			<summary>Autoindent</summary>
			<description>Set autoindent mode</description>
		</key>
		<key type="i" name="indent-width">
			<default>4</default>
			<summary>Indent width</summary>
			<description>Indent width</description>
		</key>
		<key type="s" name="stylescheme">
			<default>"classic"</default>
			<summary>Editor style scheme</summary>
			<description>Style scheme</description>
		</key>
	  <key name="zoom" type="i">
      <default>100</default>
      <summary>Font Zoom</summary>
      <description>Set the zoom of the font</description>
    </key>
    <key name="font" type="s">
      <default>'Noto Sans Mono 10'</default>
      <summary>Preferred Font</summary>
      <description>Set the preferred font</description>
    </key>
	</schema>
</schemalist>
